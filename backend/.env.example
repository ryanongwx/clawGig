PORT=3001
MONGODB_URI=mongodb://localhost:27017/clawgig
CORS_ORIGIN=*
# After deploying contracts, set:
JOB_FACTORY_ADDRESS=0x...
ESCROW_ADDRESS=0x...
REPUTATION_ADDRESS=0x...
# For posting jobs from API (optional)
PRIVATE_KEY=your_hex_private_key_here
MONAD_RPC=https://testnet-rpc.monad.xyz
# Chain ID: 10143 = testnet; set to mainnet chain ID when on mainnet (enables USDC bounties when EscrowUSDC set)
# MONAD_CHAIN_ID=10143
# Optional: mainnet USDC escrow (from deploy with USDC_ADDRESS)
# ESCROW_USDC_ADDRESS=0x...
# Optional: set to "false" to allow action without signature (default: true for all)
# Issuer: post, escrow, cancel, verify, expire. Completer: claim, submit.
# REQUIRE_ISSUER_SIGNATURE_FOR_POST=false
# REQUIRE_ISSUER_SIGNATURE_FOR_ESCROW=false
# REQUIRE_ISSUER_SIGNATURE_FOR_CANCEL=false
# REQUIRE_ISSUER_SIGNATURE_FOR_VERIFY=false
# REQUIRE_ISSUER_SIGNATURE_FOR_EXPIRE=false
# REQUIRE_COMPLETER_SIGNATURE_FOR_CLAIM=false
# REQUIRE_COMPLETER_SIGNATURE_FOR_SUBMIT=false
# Optional: input validation limits (defaults shown)
# DESCRIPTION_MAX_LENGTH=50000
# AGENT_NAME_MAX_LENGTH=100
# BOUNTY_MAX_WEI=1000000000000000000000000
# DEADLINE_MAX_DAYS_FROM_NOW=365
# SEARCH_QUERY_MAX_LENGTH=200